<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <h1>Messages:</h1>
    <a href="/new">New message</a>
    <ul>
      <% messages.forEach(message => { %>
          <li>
              <strong>User:</strong> <%= message.user %><br>
              <strong>Text:</strong> <%= message.text %><br>
              <strong>Date:</strong> <%= message.added.toDateString() %>
          </li>
      <% }); %>
  </ul>
  </body>
</html>
